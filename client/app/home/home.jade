navbar

header#banner.hero-unit
.container
  .col-md-8
    h2 Add Review
    form.form(name="addReview")
      .form-group
        label Place
        input.form-control(type="text", ng-model="addReview.place")
      .form-group
        label Rating
        rating(max="5", ng-model="addReview.rating")
      .form-group
        label Review
        textarea.form-control(type="text", rows="3", ng-model="addReview.review")
      .form-group
        button.btn.btn-primary(type="submit", ng-click="submitReview(addReview)") Post

    p {{response}}



  .col-md-4
    h2 My Profile

  .col-md-6.feed
      h2 Activity Feed
      ul.list-unstyled
        li(ng-repeat="activity in feed")
          span(ng-class="{'glyphicon-user': activity.type === 'addfriend', 'glyphicon-ok': activity.type === 'review'}").glyphicon
          | {{activity.title}} â€“ {{activity.data}}

  .col-md-6
      h2
        ul.list-inline.pull-right
          li
            a.btn.btn-primary(href="/joingroup") Join Group
          li
            a.btn.btn-primary(href="/creategroup") Create Group
        | My Groups
      ul.list-unstyled.group
        a(ng-repeat="group in groups" , ng-href="/group/{{group.slug}}")
          li()
            span.pull-right.badge {{group.data}}
            | {{group.name}}
